    <!--获取总个数-->
    <select id="getTGkmtUnitsCount" resultType="java.lang.Integer">
        SELECT count(1) FROM T_GKMT_UNITS
    </select>
    <!--获取总个数-->
    <select id="getTGkmtUnitsCountByParams" resultType="java.lang.Integer">
        SELECT count(1) FROM T_GKMT_UNITS
    </select>

    <select id="getTGkmtUnitsByPageable" resultMap="TGkmtUnitsInfoResultMap">
      SELECT * 
      FROM (SELECT ROWNUM as rn, a.* from T_GKMT_UNITS a WHERE ROWNUM <= #{end}) WHERE rn > #{start}
    </select>
    <select id="getTGkmtUnitsByParamsPageable" resultMap="TGkmtUnitsInfoResultMap">
      SELECT * 
      FROM (SELECT ROWNUM as rn, a.* from T_GKMT_UNITS a WHERE ROWNUM <= #{end}) WHERE rn > #{start}
    </select>
    <select id="getHomepageInfo" resultMap="homepageInfoResultMap">
      select '***' AS name, '***' AS second_name, count(DISTINCT ***) as second_value, 
      '***' as third_name, COUNT(DISTINCT ***) as third_value, '***' as fourth_name, 
      COUNT(DISTINCT ***) as fourth_value from T_GKMT_UNITS
    </select>
